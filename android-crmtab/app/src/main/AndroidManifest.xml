<?xml version="1.0" encoding="utf-8"?>


<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pds.isintheair.fr.crmtab" >

    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />


    <application
        android:name=".CrmTabApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"

        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity

            android:name="pds.isintheair.fr.crmtab.LoginActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_login"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name="pds.isintheair.fr.crmtab.registercall.Views.displaycalls.LaunchDisplayLogFragment"
            android:label="@string/title_activity_start_call_register"
             />
        <activity
            android:name="pds.isintheair.fr.crmtab.registercall.StartCallRegisterActivity"
            android:label="@string/title_activity_start_call_register"
            android:theme="@style/AppTheme.NoActionBar">

            android:name="pds.isintheair.fr.crmtab.uc.phone.call.receive.view.activity.ContactDetailActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_login"
            android:theme="@style/FullscreenTheme">

        </activity>
        <activity android:name="net.hockeyapp.android.UpdateActivity" />

        <activity android:name=".admin.referentiel.client.activity.CRUDCustomerActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity
            android:name="pds.isintheair.fr.crmtab.crv.view.CrvMainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="pds.isintheair.fr.crmtab.crv.view.CreateCrvActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="pds.isintheair.fr.crmtab.crv.view.CrvHomeActivity"
            android:label="CRM-tab" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity
            android:name="pds.isintheair.fr.crmtab.registercall.Views.registeracall.RegisterCallActivity"
            android:label="@string/title_activity_call_log_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <service android:enabled="true" android:name=".registercall.ListenerPendingLogs" />
        <service android:enabled="true" android:name="pds.isintheair.fr.crmtab.registercall.ListennerCallEndedEvent" />

        <activity android:name="pds.isintheair.fr.crmtab.uc.phone.call.receive.view.activity.CallActivity"/>

        <activity
            android:name="pds.isintheair.fr.crmtab.crv.view.CrvPreformatedMessage"
            android:label="@string/title_activity_crv_preformated_message"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>



        <receiver
            android:name="pds.isintheair.fr.crmtab.uc.phone.call.receive.controller.broadcastreceiver.BootServiceBrodcastReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
            </intent-filter>
        </receiver>

        <service android:name="pds.isintheair.fr.crmtab.uc.phone.call.receive.controller.service.CallService"/>

    </application>
</manifest>
