<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/scroll_view" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="700dp"
        android:layout_height="1000dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardBackgroundColor="#00218c"
        android:layout_gravity="center_horizontal" android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center_vertical">



            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#e8e8e7"
                android:orientation="horizontal"
                >

                <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dip"
                    android:text="@string/textaddcalllog"
                    android:textColor="#2582C5"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>


            <LinearLayout android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="30dp"
                android:orientation="vertical"
                android:background="@drawable/gradientbackground"
                >
                <TextView android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textColor="#372c24"
                    android:text="@string/contact"/>
                <EditText android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="20dip"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:hint="Franck NEROT"
                    android:enabled="false"/>

                <TextView android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textColor="#372c24"
                    android:text="@string/textViewNumero"/>
                <EditText android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="20dip"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:hint="0762506058"
                    android:enabled="false"/>
                <TextView android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textColor="#372c24"
                    android:text="Client"/>
                <EditText android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="20dip"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:hint="Hopital Henri Mondor"
                    android:enabled="false"/>
                <TextView android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textColor="#372c24"
                    android:text="Date"/>
                <EditText android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="20dip"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:hint="12/01/2015 - 14h53"
                    android:enabled="false"/>

                <TextView android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textColor="#372c24"
                    android:text="Durée"/>
                <EditText android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="20dip"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:hint="5 min 15s"
                    android:enabled="false"/>

                <TextView android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textColor="#372c24"
                    android:text="Type d'appel"/>
                <EditText android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="20dip"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    android:hint="Reçu"
                    android:enabled="false"/>

                <TextView android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textColor="#372c24"
                    android:text="Sujet"/>
                <EditText android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#f3f3f3"
                    android:layout_marginTop="5dip"
                    android:layout_marginBottom="20dip"
                    android:paddingLeft="5dp"
                    android:singleLine="true"
                    />

                <TextView android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:textColor="#372c24"
                    android:text="@string/textviewcommentaire"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <EditText android:layout_width="600dp"
                        android:layout_height="100dp"
                        android:background="#f3f3f3"
                        android:layout_marginTop="5dip"
                        android:layout_marginBottom="20dip"
                        android:paddingLeft="5dp"
                        />
                    <Button

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/btnMic"
                        android:background="@drawable/mic1"/>
                </LinearLayout>


                <Button android:layout_width="190dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Enregistrer"
                    android:textColor="#fff"
                    android:background="@drawable/btn"/>

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</ScrollView>